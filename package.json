{
  "name": "@timedoor/baskito-ui",
  "type": "module",
  "displayName": "Baskito Component",
  "description": "Baskito Component using Vue 3 and Bootstrap 4",
  "version": "0.3.1",
  "license": "MIT",
  "main": "./dist/baskito.umd.js",
  "module": "./dist/baskito.es.js",
  "sass": "./scss/stisla.scss",
  "exports": {
    ".": {
      "import": "./dist/baskito.es.js",
      "require": "./dist/baskito.umd.js"
    }
  },
  "files": [
    "dist",
    "scss",
    "src",
    "!src/**/*.spec.ts",
    "!src/**/*.spec.js",
    "!src/App.vue",
    "!src/main.ts",
    "!scss/sample.scss"
  ],
  "types": "./dist/Baskito.d.ts",
  "private": false,
  "scripts": {
    "dev": "vite --port 5174",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit --composite false",
    "build": "pnpm run type-check && pnpm run build-only",
    "serve": "vite preview",
    "test": "pnpm run test:lint && pnpm run test:unit",
    "test:lint": "eslint src --ext .js,.vue,.ts ",
    "test:unit": "vitest",
    "test:coverage": "vitest --coverage",
    "release": "pnpm run build && changeset publish"
  },
  "peerDependencies": {
    "@types/select2": "^4.0.57",
    "sweetalert": "^2.1.2",
    "vue": "^3.2.45"
  },
  "dependencies": {
    "@inertiajs/core": "^1.0.12",
    "@inertiajs/vue3": "^1.0.12",
    "@vueuse/core": "^9.13.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@popperjs/core": "^2.11.8",
    "@types/bootstrap": "^5.2.7",
    "@types/jquery": "^3.5.22",
    "@types/select2": "^4.0.59",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vitest/coverage-v8": "^0.34.6",
    "@vue/compiler-dom": "^3.3.4",
    "@vue/runtime-core": "^3.3.4",
    "@vue/shared": "^3.3.4",
    "@vue/test-utils": "^2.4.1",
    "@vueuse/shared": "^9.13.0",
    "c8": "^7.14.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-vue": "^9.17.0",
    "happy-dom": "^7.8.1",
    "jsdom": "^20.0.3",
    "prettier": "^2.8.8",
    "rollup": "^3.29.4",
    "rollup-plugin-visualizer": "^5.9.2",
    "sass": "^1.69.3",
    "sweetalert": "^2.1.2",
    "typescript": "4.8.4",
    "vite": "^3.2.7",
    "vite-plugin-dts": "^1.7.3",
    "vitest": "^0.34.6",
    "vue": "^3.3.4",
    "vue-router": "^4.2.5",
    "vue-tsc": "^1.8.19"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint --cache --fix",
    "*": "prettier --write --ignore-unknown"
  }
}
